@model BTLWEB.Models.TDanhMucSp
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/Layoutadmin.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .product-detail {
        max-width: 1300px;
        margin: 0 auto;
        padding: 20px;
        padding-left: 40px;
        padding-right: 40px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .product-detail h2 {
            margin-bottom: 30px;
            font-size: 32px; /* Increased font size */
            font-weight: bold;
            text-align: center;
            color: #333;
        }

        .product-detail .form-group {
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .product-detail .form-group label {
                font-weight: 600;
                color: #555;
                margin-right: 20px;
                flex-basis: 30%;
                text-align: left;
                font-size: 18px; /* Increased font size */
            }

            .product-detail .form-group span {
                flex-basis: 60%;
                font-size: 18px; /* Increased font size */
                color: #333;
                background-color: #f0f0f0;
                padding: 10px;
                border-radius: 5px;
                cursor: default; /* Prevents text selection cursor */
                pointer-events: none; /* Disables click events on the span */
            }

            .product-detail .form-group img {
                max-width: 100%;
                border-radius: 5px;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            }

    .btn-back {
        display: block;
        margin: 20px auto;
        padding: 10px 20px;
        background-color: #6c757d;
        color: white;
        text-align: center;
        border-radius: 5px;
        text-decoration: none;
        width: 200px;
        font-size: 18px; /* Increased font size */
    }

        .btn-back:hover {
            background-color: #5a6268;
            color: white;
        }
</style>

<div class="product-detail">
    <h2>Chi tiết sản phẩm</h2>

    <div class="form-group">
        <label>Tên sản phẩm:</label>
        <span>@Model.TenSp</span>
    </div>
    <div class="form-group">
        <label>Thời gian bảo hành (năm):</label>
        <span>@Model.ThoiGianBaoHanh</span>
    </div>
    <div class="form-group">
        <label>Giá nhập:</label>
        <span>@Model.GiaNhoNhat</span>
    </div>
    <div class="form-group">
        <label>Giá bán:</label>
        <span>@Model.GiaLonNhat</span>
    </div>
    <div class="form-group">
        <label>Giới thiệu sản phẩm:</label>
        <span>@Model.GioiThieuSp</span>
    </div>
    <div class="form-group">
        <label>Chiết khấu:</label>
        <span>@Model.ChietKhau</span>
    </div>
    <div class="form-group">
        <label>Loại sản phẩm:</label>
        <span>@Model.MaLoai</span>
    </div>
    <div class="form-group">
        <label>Xuất xứ:</label>
        <span>@Model.MaNuocSx</span>
    </div>
    <div class="form-group">
        <label>Ảnh đại diện:</label>
        <img src="@Url.Content("~/Images/" + Model.AnhDaiDien)" alt="Ảnh sản phẩm" />
    </div>

    <a href="@Url.Action("DanhMucSanPham","HomeAdmin",new {area="admin"})">quay lại danh sách</a>
</div>


